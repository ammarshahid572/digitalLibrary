<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        h2{
            text-align: center;
            text-decoration: none;
            font-family: 'Times New Roman', Times, serif;
            margin-left: auto;
        }
        body
    {
	    background-size: cover;
		background-repeat: no-repeat; 
	}
		.additional{
			text-align: center;
		}
		.additional a{
			border: none;
 			color:rgb(22, 25, 158);
  			padding: 15px 32px;
  			text-align: center;
 		 	text-decoration: none;
  			display: inline-block;
  			font-size: 16px;
		}
		.grid-container {
  		display: grid;
  		grid-template-columns: auto auto;
		}
        table {
            color: rgb(0, 0, 0);
            font-family: Arial, Helvetica, sans-serif;
         border-collapse: collapse;
         width: 100%;
        }
         th {
             color: white;
            border: 1px solid #ddd;
            padding: 8px;
        }
        td {
            color: black;
            border: 1px solid #ddd;
            padding: 8px;
        }
        tr:nth-child(even){background-color: #f2f2f293;}
        tr:nth-child(odd){background-color: #f2f2f271;}
         tr:hover {background-color: rgb(15, 167, 159);}
         th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #0415aa;
            color: white;}
		</style>


  <title>Books List</title>
</head>
<body>
    <div class="table-data">

<h2>Books List</h2>
<div class= "center">
<div class= "additional">
    <table border="1">
        <tr>
            <th> Accession No</th>
            <th>Title</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>No of Books</th>
            <th>Rack No</th>
            <th>Edit</th>
        </tr>
        
        <%
        if(bData.length!=0){
        var i=1;
        bData.forEach(function(data){
        %>
        <tr>
            <td><%=i; %></td>
            <td><%=data.book_name %></td>
            <td><%=data.ISBN %></td>
            <td> <%=data.author_name %></td>
            <td><%=data.no_of_books %></td>
            <td><%=data.rack_no %></td>
            <td><a href="/admin/edit?id=<%=data.ISBN%>">Edit</a></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    <a style="background-color: rgb(13, 37, 197); color: white;" href="/admin/newBook"> Add New Book</a>
</div>
</div>
</body>
</html>